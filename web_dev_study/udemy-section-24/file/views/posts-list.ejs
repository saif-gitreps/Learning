<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('includes/head', { title: 'All Posts' }) %>
      <link rel="stylesheet" href="/styles/posts.css" />
   </head>

   <body>
      <%- include('includes/header') %>
      <main id="all-posts">
         <h1>All Posts</h1>
         <% if(!posts || posts.length == 0) { %>
         <p>No posts yet!</p>
         <a class="btn" href="/new-post">Create new post</a>
         <% } else { %>
         <ol id="posts-list">
            <% for (let item of posts) { %>
            <li><%- include("includes/post-item" , {post : item}) %></li>
            <% } %>
         </ol>
         <% } %>
      </main>
   </body>
</html>
